<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Barre supérieure avec bouton liste -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_list"
            android:contentDescription="Liste des villes" />
    </RelativeLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ma Position"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chargement..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11°"
        android:textColor="@android:color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avertissement de pluie"
        android:textColor="#FF5555"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"/>
    <!-- Qualité de l'air -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        tools:ignore="ExtraText">
        >

        <TextView
            android:id="@+id/tv_air_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mauvaise"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_air_quality_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La qualité de l'air n'est pas très bonne."
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- TODO: Ajouter les prévisions heure par heure et sur 5 jours -->

</LinearLayout>